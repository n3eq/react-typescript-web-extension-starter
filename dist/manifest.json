{
    "manifest_version": 3,
    "name": "Movie Saver",
    "description": "Save all of your movies in one place",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "content_scripts": [
        {
            "include_globs": ["https://www.netflix.com/browse*jbv*"],
            "js": ["js/netflixScript.js"],
            "matches": ["https://www.netflix.com/browse*"]
        },
        {
            "include_globs": ["https://www.play.hbomax.com/browse*feature*"],
            "js": ["js/hboScript.js"],
            "matches": ["https://www.play.hbomax.com/browse*"]

        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "host_permissions": ["https://*/*"],
    "permissions": ["tabs", "activeTab", "notifications", "scripting"]
}